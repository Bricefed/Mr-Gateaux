{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - MR-GATEAU -{% endblock %}

{% block body %}

    <div class="blockLogin">
        <div class="loginGauche">
            <p class="titreText">Mot de passe oublié</p>
        </div>
        <div class="loginDroite">
        {% for alert in app.flashes('notAdress') %}
            <div class="alert alert-danger mb-5">
                {{alert}}
            </div>
        {% endfor %}
        {% for alert in app.flashes('warning') %}
            <div class="alert alert-warning mt-5">
                {{alert}}
            </div>
        {% endfor %}
            <h1 class="text-center mb-5">Mot de passe oublié</h1>
            {{ form(emailForm) }}
        </div>
    </div>
{% endblock %}
